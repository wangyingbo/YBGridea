<body>
    <div id="friendscontainermobile">
        <% if (site.customConfig.friendschoice) { %>
        <% site.customConfig.friends.forEach(function(friend) { %>
        <div class="friend-box" onclick="window.location.href= '<%= friend.siteLink %>';return false">
            <img class="friend-avatar" src="<%= friend.siteLogo %>">
            <div class="flink-info">
                <a href="<%= friend.siteLink %>" class="title" target="_blank"><%= friend.siteName %></a>
                <div style="margin-top:10px"></div>
                <p><%= friend.description %></p>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>

    <div id="pcintroimg">
        <div class="sea">
            <p class="title">友人帐</p>
            <span class="wave"></span>
            <span class="wave"></span>
            <span class="wave"></span>
        </div>
    </div>

    <div id="friendscontainer">
        <div id="friendsrule">

        </div>
        <% if (site.customConfig.friendschoice) { %>
        <% site.customConfig.friends.forEach(function(friend) { %>
        <div class="background" onclick="window.open('<%= friend.siteLink %>');return false">
            <div class="infoForm" title="<%= friend.description %>">
                <img class="favatar" src="<%= friend.siteLogo %>">
                <h2><%= friend.siteName %></h2>
                <h3><%= friend.description %></h3>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</body>


<script>
    var friendsrule = "<%- site.customConfig.friendsrule %>"
    $("#friendsrule").html(friendsrule);
</script>